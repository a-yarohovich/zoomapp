<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinMeetingActivity">

    <ImageView
        android:id="@+id/backgroundMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:src="@drawable/background_main"
        />

    <TextView
        android:id="@+id/textMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/zm_white"
        android:text="@string/app_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <EditText
            android:id="@+id/editMeetingNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Meeting Number"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/editDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Your name"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btnJoinMeeting"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/style_btn_pressed_blue"
            android:textColor="@color/zm_white"
            android:text="Join Meeting"
            android:onClick="onBtnJoinMeeting"
            />
    </LinearLayout>
</RelativeLayout>